{
  "show_edit_predictions": false,
  "collaboration_panel": {
    "dock": "right"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "theme": "Github Dark",
  "language_models": {
    "ollama": {}
  },
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro"
    },
    "always_allow_tool_actions": false,
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true
    // "default_model": {
    //   "provider": "ollama",
    //   "model": "devstral:24b"
    // }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
    "toggle_relative_line_numbers": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true
  },
  "ui_font_size": 20,
  "buffer_font_size": 20,
  "agent_font_size": 22,
  "scrollbar": { "show": "never" },
  "gutter": {
    "runnables": false,
    "folds": true,
    "line_numbers": true
  },
  "scroll_beyond_last_line": "off",
  "languages": {
    "Nix": {
      "language_servers": ["nixd", "nil"],
      "formatter": {
        "external": {
          "command": "alejandra",
          "arguments": ["--quiet", "--"]
        }
      }
    }
  },
  "auto_install_extensions": {
    "haskell": true,
    "nix": true,
    "emmet": true,
    "html": true,
    "toml": true,
    "nu": true,
    "sql": true,
    "ron": true,
    "ruff": true,
    "zed-legacy-themes": true
  },
  "title_bar": { "show": "never" }
}
